<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/main_toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ProgressBar
            android:id="@+id/progressBarPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/errorTextPopular"
            style="@style/HeaderTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_toolbar"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:text="@string/popular"
            android:textAppearance="@style/TitleTextTheme" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularMovieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popular"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popularMovieList"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:text="@string/top_rated"
            android:textAppearance="@style/TitleTextTheme" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trendingMovieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trending"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trendingMovieList"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:text="@string/upcoming"
            android:textAppearance="@style/TitleTextTheme" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcomingMovieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upcoming"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />

    </RelativeLayout>

</ScrollView>