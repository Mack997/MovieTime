<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="windowActionBar">false</item>
        <item name="titleTextAppearance">@style/HeaderTheme</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="DescriptionTextTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderTheme">
        <item name="android:textColor">@color/ornage</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TitleTextTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
